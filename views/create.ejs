<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          
          <div class="mt-5">
            <h2 class="mb-4">Post A Case</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image of case</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Detailed description of case</label>
                <textarea class="form-control" id="caption" name="caption" style="min-height: 150px;"></textarea>
              </div>
             
              <button type="submit" class="signup-btn" style="border: none;" value="Upload">Submit</button>
            </form>
          </div>
      </div>
     
        
        
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>